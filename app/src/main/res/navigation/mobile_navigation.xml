            android:name="is_bookmarks"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_profile"
        android:name="ru.skillbranch.skillarticles.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/page_article"
        android:name="ru.skillbranch.skillarticles.ui.article.ArticleFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_article"> <!-- set title from args -->
        <argument
            android:name="article_id"
            app:argType="string" />
        <argument
            android:name="author"
            app:argType="string" />
        <argument
            android:name="author_avatar"
            app:argType="string" />
        <argument
            android:name="category"
            app:argType="string" />
        <argument
            android:name="category_icon"
            app:argType="string" />
        <argument
            android:name="poster"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="date"
            app:argType="java.util.Date" />
    </fragment>
